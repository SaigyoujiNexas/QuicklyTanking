<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dishname_identificationitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="这里是菜名"/>

    <TextView
        android:id="@+id/text1_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="热量 : "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dishname_identificationitem" />
    <TextView
        android:id="@+id/baikeurl_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="这里是url"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text1_identification"/>
    <TextView
        android:id="@+id/description_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="这里是描述"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/baikeurl_identification"/>

    <TextView
        android:id="@+id/calorietext_runrecoritem_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="这里是卡路里"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text1_identification"
        app:layout_constraintLeft_toRightOf="@id/text1_identification"
        app:layout_constraintTop_toTopOf="@+id/text1_identification" />
</androidx.constraintlayout.widget.ConstraintLayout>