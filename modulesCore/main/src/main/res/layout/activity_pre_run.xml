<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_pre_run"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.PreRunActivity">

    <TextView
        android:id="@+id/text_preRunTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跑步"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_ToCumulativeDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累计跑步距离 >"
        android:textColor="@color/gray3"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_preRunTitle"
        app:layout_constraintLeft_toLeftOf="@id/text_preRunTitle"/>

    <TextView
        android:id="@+id/text_CumulativeDistance_prerun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.99 公里"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/text_ToCumulativeDistance"
        app:layout_constraintTop_toBottomOf="@+id/text_ToCumulativeDistance" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_startRun_preRun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/teal_200"
        android:clickable="true"
        android:src="@drawable/img_2"
        app:fabCustomSize="100dp"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:pressedTranslationZ="120dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:fabSize="normal" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="开始"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_targetDistance_preRun"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/img_2"
        app:fabCustomSize="100dp"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:pressedTranslationZ="120dp"
        android:layout_marginBottom="155dp"
        android:layout_marginRight="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:fabSize="normal" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="目标"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
        android:id="@+id/card_music_prerun"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="110dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/music"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:text="音乐"
                android:textSize="15sp"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_setting_back"
        android:layout_width="90dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_setting_prerun"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="11dp"
                android:background="@drawable/setting" />
            <View
                android:layout_width="2dp"
                android:layout_height="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#FF909090"/>
            <ImageView
                android:id="@+id/image_close_prerun"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="11dp"
                android:background="@drawable/close"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>