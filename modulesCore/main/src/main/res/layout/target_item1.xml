<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_constraint_item1"
    android:background="@color/lightDark">
    <TextView
        android:id="@+id/text_targetdistance_TargetDistance_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="85dp"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设定跑步时长"
        android:textColor="@color/gray7"
        android:textSize="13sp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_targetdistance_TargetDistance_item1"
        app:layout_constraintLeft_toLeftOf="@id/text_targetdistance_TargetDistance_item1" />
    <View
        android:id="@+id/line_target_item1"
        android:layout_width="26dp"
        android:layout_height="4dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@id/scrollPickerView_target_item1"
        app:layout_constraintTop_toTopOf="@id/scrollPickerView_target_item1"/>
    <com.example.modulescore.main.Target.ScrollPickerView
        android:id="@+id/scrollPickerView_target_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_targetdistance_TargetDistance_item1"
        android:layout_marginLeft="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>