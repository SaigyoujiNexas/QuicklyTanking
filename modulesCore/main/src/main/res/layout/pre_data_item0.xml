<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Data.PreDataActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_ToCumulativeDistance_predata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计跑步距离 >"
            android:textColor="@color/gray3"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_CumulativeDistance_predata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.97 公里"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ToCumulativeDistance_predata" />
        <TextView
            android:id="@+id/distancetext_fragment_predata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跑步记录"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/text_CumulativeDistance_predata"/>
        <LinearLayout
            android:id="@+id/linearlayout_pre_data"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/distancetext_fragment_predata"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>