<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/back_minefragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_3"
        android:scaleType="centerCrop"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_fragmentmine"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/back_minefragment"
        app:layout_constraintBottom_toBottomOf="@id/back_minefragment"
        app:layout_constraintLeft_toLeftOf="@id/back_minefragment"
        app:layout_constraintRight_toRightOf="@id/back_minefragment"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="40dp">
        <ImageView
            android:id="@+id/userimg_fragmentmine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img1"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/username_fragmentmine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_fragmentmine"
        android:text="nous"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/card_fragmentmine"
        app:layout_constraintRight_toRightOf="@id/card_fragmentmine"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:id="@+id/linearlayout_minefragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_minefragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>