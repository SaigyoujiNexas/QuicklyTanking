<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_front_icon"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_marginTop="56dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:id="@+id/tv_login_front_text"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_front_icon" />
    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="10dp"
        android:id="@+id/fcv_login_front_state"
        android:layout_width="match_parent"

        app:layout_constraintTop_toBottomOf="@id/tv_login_front_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="106dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/fcv_login_front_state"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_login_front_state"/>
    <TextView
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_forget"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/tv_login_front_state"
        app:layout_constraintStart_toStartOf="@+id/fcv_login_front_state"
        android:id="@+id/tv_login_front_forget"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/login_front_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:textSize="17sp"
        android:id="@+id/tv_login_front_register"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_login_front_register"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/next"
        android:id="@+id/bt_login_front_next"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>