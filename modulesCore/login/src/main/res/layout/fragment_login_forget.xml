<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginStart="24dp"
        android:textSize="@dimen/sp_14"
        android:text="@string/telBind"
        android:id="@+id/tv_login_forget_tel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:maxLines="1"
        android:id="@+id/et_login_forget_tel"
        android:inputType="text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />
    <TextView
        android:id="@+id/tv_login_forget_invalid_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_error_24"
        android:text="手机号未注册"
        android:layout_marginStart= "24dp"
        tools:visibility="visible"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/verify_code"
        android:id="@+id/tv_login_forget_verify"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_login_forget_verify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_login_forget_send_verify_code"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:minHeight="48dp" />

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/bt_login_forget_send_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/send_verify_code"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login_forget_invalid_vrf_cd"
        android:drawableStart="@drawable/ic_baseline_error_24"
        android:layout_marginStart="24dp"
        android:text="验证码不正确"
        tools:visibility="visible"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新的密码"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/et_login_fgt_passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="48dp"
        android:maxLines="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/et_login_fgt_passwd_cfm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="48dp"
        android:maxLines="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login_forget_invalid_passwd"
        android:drawableStart="@drawable/ic_baseline_error_24"
        android:layout_marginStart="24dp"
        tools:visibility="visible"
        android:visibility="invisible"
        android:text="两次密码输入不一致"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/bt_login_forget_reset"
        android:layout_marginTop="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="重置密码"/>
</LinearLayout>